# Base de données
DATABASE_URL=postgresql://username:password@localhost:5432/crm_assurance

# Session
SESSION_SECRET=your-very-secure-session-secret-key-here

# Environnement
NODE_ENV=development

# Port (optionnel, par défaut 5000)
PORT=5000

# Domaines autorisés pour les callbacks (optionnel)
REPLIT_DOMAINS=localhost:5000,your-domain.com

# Configuration email (optionnel, pour les notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Clés API (optionnelles, pour les intégrations futures)
API_KEY=your-api-key-here
